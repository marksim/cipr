#!/usr/bin/env ruby
$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'choice'
require 'cipr'

Choice.options do
  banner "Usage: #{File.basename(__FILE__)} [-u <github_user>] [-p <github_password>] user/repo"
  header ''
  header 'Github Options:'

  option :user do
    short '-u'
    long '--user=USERNAME'
    desc "Github username for authentication"
  end

  option :password do
    short '-p'
    long '--password=PASSWORD'
    desc "Github password for authentication"
  end

  option :directory do
    short '-d'
    long '--directory=GIT_REPO_DIRECTORY'
    desc "Github repo location"
  end

  option :command do
    short '-c'
    long '--command=COMMAND_TO_RUN'
    desc "Command to run to test, defaults to 'rake spec'"
  end


  separator ''
  separator 'Common options: '

  option :help do
    long '--help'
    desc 'Show this message'
  end

  option :version do
    short '-v'
    long '--version'
    desc 'Show version'
    action do
      puts "#{File.basename(__FILE__)} v#{Cipr::Version}"
      exit
    end
  end
end

options = Choice.choices

Cipr::Server.go(Choice.rest[0].to_s, options)